<div class="fade-in">
    <div class="page-header">
        <div>
            <h1 class="page-title">Détails Utilisateur</h1>
            <p class="page-subtitle">Informations détaillées de l'utilisateur</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/users" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Retour
            </a>
            <button class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Modifier
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <i class="fas fa-user me-2"></i>Informations Personnelles
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Nom:</strong> <%= user.name || 'Non spécifié' %>
                        </div>
                        <div class="col-md-6">
                            <strong>Email:</strong> <%= user.email || 'Non spécifié' %>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <strong>Téléphone:</strong> <%= user.phone || 'Non spécifié' %>
                        </div>
                        <div class="col-md-6">
                            <strong>Statut:</strong> 
                            <span class="badge <%= user.status === 'active' ? 'badge-success' : 'badge-danger' %>">
                                <%= user.status === 'active' ? 'Actif' : 'Inactif' %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">
                            <i class="fas fa-check me-2"></i>Activer
                        </button>
                        <button class="btn btn-warning">
                            <i class="fas fa-pause me-2"></i>Suspendre
                        </button>
                        <button class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>