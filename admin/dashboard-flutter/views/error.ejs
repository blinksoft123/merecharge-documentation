<div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="text-center">
        <div class="error-icon mb-4">
            <i class="fas fa-exclamation-triangle" style="font-size: 4rem; color: var(--warning);"></i>
        </div>
        <h1 class="error-title mb-3" style="font-size: 2rem; color: var(--gray-800);">
            Oops! Une erreur s'est produite
        </h1>
        <p class="error-message mb-4" style="color: var(--gray-600); font-size: 1.1rem;">
            <%= message || 'Une erreur inattendue s\'est produite.' %>
        </p>
        <div class="error-actions">
            <a href="/dashboard" class="btn btn-primary me-2">
                <i class="fas fa-home me-2"></i>Retour au Dashboard
            </a>
            <button onclick="history.back()" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Page précédente
            </button>
        </div>
    </div>
</div>