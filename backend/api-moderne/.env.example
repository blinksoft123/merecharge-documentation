# Merecharge Backend Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
API_VERSION=v1

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=merecharge-api-key-2025
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Firebase Admin (copier depuis votre projet Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# MTN MoMo API Configuration
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_API_USER_ID=your-mtn-api-user-id
MTN_API_KEY=your-mtn-api-key
MTN_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_ENVIRONMENT=sandbox

# Orange Money API Configuration  
ORANGE_CLIENT_ID=your-orange-client-id
ORANGE_CLIENT_SECRET=your-orange-client-secret
ORANGE_BASE_URL=https://api.orange.com
ORANGE_ENVIRONMENT=sandbox

# Maviance API Configuration
MAVIANCE_API_KEY=your-maviance-api-key
MAVIANCE_BASE_URL=https://api.maviance.info
MAVIANCE_SERVICE_ID=your-service-id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://merecharge.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/merecharge.log

# Database (si vous voulez ajouter une DB locale)
# DATABASE_URL=mongodb://localhost:27017/merecharge
# REDIS_URL=redis://localhost:6379